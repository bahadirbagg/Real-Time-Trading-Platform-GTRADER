<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viop_activity_drawerLayout"
    tools:context=".ViopActivity">
    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/future"
            android:hint="Future"
            android:backgroundTint="@color/button_color_change"
            android:textColor="@android:color/black"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="95dp" />
        <Button
            android:id="@+id/option"
            android:hint="Option"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/button_color_change"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Akşam Seansı"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/get_paycode"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:inputType="text"
            android:text="Sözleşme Kodu" />
        <Button
            android:id="@+id/alış"
            android:hint="alış"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/Green"
            android:textColor="@color/white"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="215dp" />
        <Button
            android:id="@+id/satış"
            android:hint="satış"
            android:textColor="@color/white"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/Red"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="295dp" />

        <ImageView
            android:id="@+id/backicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/backbutton"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/backicon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/forwardbutton"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/backiconrr"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/backbutton"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="120dp"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/backiconr"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/forwardbutton"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="120dp"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/backicon3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/backbutton"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/backicon4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/forwardbutton"
            android:layout_marginLeft="365dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/fiyat"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="15dp"
            android:inputType="text"
            android:text="Fiyat" />
        <EditText
            android:id="@+id/lot"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="220dp"
            android:inputType="text"
            android:text="Miktar" />
        <ImageView
            android:id="@+id/backicon5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/subtract"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="165dp"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/backicon6"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/add"
            android:layout_marginLeft="390dp"
            android:layout_marginTop="165dp"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/backicon7"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/subtract"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="165dp"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/backicon8"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/add"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="165dp"
            android:layout_alignParentTop="true"/>
        <Button
            android:id="@+id/ilet"
            android:hint="ilet"
            android:backgroundTint="@color/Green"
            android:textColor="@color/white"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="215dp"
            android:layout_marginLeft="180dp"
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/button_color_change"
            android:hint="Emirler"
            android:textColor="@color/button_text_color" />
        <Button
            android:background="@drawable/btn_shape"
            android:textColor="@android:color/black"
            android:id="@+id/buttonr"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="270dp"
            android:backgroundTint="@color/button_color_change"
            android:hint="Pozisyon"
            android:layout_marginLeft="70dp" />
        <Button
            android:background="@drawable/btn_shape"
            android:textColor="@android:color/black"
            android:id="@+id/buttonr1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="270dp"
            android:backgroundTint="@color/button_color_change"
            android:layout_marginLeft="140dp"
            android:hint="Bakiye" />
        <Button
            android:background="@drawable/btn_shape"
            android:textColor="@android:color/black"
            android:id="@+id/buttonr2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="270dp"
            android:backgroundTint="@color/button_color_change"
            android:layout_marginLeft="210dp"
            android:hint="Grafik"  />
        <Button
            android:background="@drawable/btn_shape"
            android:textColor="@android:color/black"
            android:id="@+id/buttonr3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="270dp"
            android:backgroundTint="@color/button_color_change"
            android:hint="Haberler"
            android:layout_marginLeft="280dp"  />
        <Button
            android:background="@drawable/btn_shape"
            android:textColor="@android:color/black"
            android:id="@+id/buttonr4"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="270dp"
            android:backgroundTint="@color/button_color_change"
            android:hint="Bilanço"
            android:layout_marginLeft="350dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/viop_activity_toolBar2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/backbutton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/textH"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Viop Alış/Satış"
                android:textColor="#B10C11"
                android:textSize="36dp" />


        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/darker_gray"

            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/viop_activity_toolBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="15dp" />


        <FrameLayout
            android:id="@+id/viop_activity_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp">


        </FrameLayout>

        <com.google.android.material.tabs.TabLayout
            android:background="@drawable/btn_shape"
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="355dp"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager2"
            android:layout_width="match_parent"
            android:layout_height="553dp"
            android:layout_below="@id/tab_layout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/viop_activity_navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/headerlayout"
        app:layout_constraintEnd_toStartOf="parent"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>