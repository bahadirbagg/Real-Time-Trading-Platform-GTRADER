<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hesap_activity_drawerLayout"
    tools:context=".HesapActivity">


  <RelativeLayout
      android:id="@+id/relativeLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
   >

    <Button
        android:background="@color/white"
        android:textColor="@android:color/black"
        android:id="@+id/button_nakit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginRight="200dp"
        android:hint="Nakit"
        />

    <Button
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:id="@+id/button_viop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="180dp"
        android:hint="Viop"
        app:layout_constraintEnd_toEndOf="@id/button_nakit" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="385dp"
        android:layout_height="670dp"
        app:layout_constraintTop_toBottomOf="@+id/hesap_activity_toolBar">

      <LinearLayout
          android:id="@+id/linearlayout"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_below="@+id/scrollView"
          android:orientation="vertical">

        <TextView
            android:id="@+id/textVieww"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="150dp"
            android:text="Toplam"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/textt" />

        <TextView
            android:id="@id/textt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Nakit"
            android:textSize="20dp" />

        <View
            android:id="@+id/chip1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt2"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt2" />

        <TextView
            android:id="@id/textt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt2"
            android:layout_marginLeft="15dp"
            android:text="T+1 Nakit"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt3"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt3" />

        <TextView
            android:id="@id/textt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt3"
            android:layout_marginLeft="15dp"
            android:text="T+2 Nakit"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt4"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt4" />

        <TextView
            android:id="@id/textt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt4"
            android:layout_marginLeft="15dp"
            android:text="Anlık K/Z"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt5"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt5" />

        <TextView
            android:id="@id/textt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt5"
            android:layout_marginLeft="15dp"
            android:text="Portföy Değeri"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt6"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt6" />

        <TextView
            android:id="@id/textt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt6"
            android:layout_marginLeft="15dp"
            android:text="Pay"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt7"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt7" />

        <TextView
            android:id="@id/textt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt7"
            android:layout_marginLeft="15dp"
            android:text="Yatırım Fonu"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt7" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt8"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt8" />

        <TextView
            android:id="@id/textt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt8"
            android:layout_marginLeft="15dp"
            android:text="Tahvil-Bono"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt8" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt9"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt9" />

        <TextView
            android:id="@id/textt10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt9"
            android:layout_marginLeft="15dp"
            android:text="Varant"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt10"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt10" />

        <TextView
            android:id="@id/textt11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt10"
            android:layout_marginLeft="15dp"
            android:text="Brüt Repo Dönüş Tutarı"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt10" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt11"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt11" />

        <TextView
            android:id="@id/textt12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt11"
            android:layout_marginLeft="15dp"
            android:text="Brüt BPP Dönüş Tutarı"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt11" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt12"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt12" />

        <TextView
            android:id="@id/textt13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt12"
            android:layout_marginLeft="15dp"
            android:text="Mevduat"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt13"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt13" />

        <TextView
            android:id="@id/textt14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt13"
            android:layout_marginLeft="15dp"
            android:text="Yabancı Para Değeri"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt14"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt14" />

        <TextView
            android:id="@id/textt15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt14"
            android:layout_marginLeft="15dp"
            android:text="Toplam Portföyün %"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt15"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt15" />

        <TextView
            android:id="@id/textt16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt15"
            android:layout_marginLeft="15dp"
            android:text="Kredi Limiti"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt16"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt16" />

        <TextView
            android:id="@id/textt17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt16"
            android:layout_marginLeft="15dp"
            android:text="Özkaynak Oranı %"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt17"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt17" />

        <TextView
            android:id="@id/textt18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt17"
            android:layout_marginLeft="15dp"
            android:text="H. Günlük Hacim"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textt17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textt18"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textt18" />
      </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/hesap_activity_toolBar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <ImageView
          android:id="@+id/backicon"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/backbutton"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_alignParentTop="true"/>

      <TextView
          android:id="@+id/textH"
          android:layout_width="150dp"
          android:layout_height="70dp"
          android:layout_marginLeft="80dp"
          android:layout_marginTop="10dp"
          android:text="Hesabım"
          android:textColor="#B10C11"
          android:textSize="36dp" />


    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/hesap_activity_toolBar2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="15dp"

        />
    <FrameLayout
        android:id="@+id/main_activity_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="70dp"
        android:background="@android:color/darker_gray"

        />


  </RelativeLayout>



  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/hesap_activity_constraintLayout">

  <com.google.android.material.appbar.AppBarLayout

      android:id="@+id/bottom_appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      app:layout_constraintBottom_toBottomOf="parent">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation"
        />

  </com.google.android.material.appbar.AppBarLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <com.google.android.material.navigation.NavigationView
      android:id="@+id/hesap_activity_navigationView"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      app:headerLayout="@layout/headerlayout"
      app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>