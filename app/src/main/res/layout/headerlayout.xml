<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/hesap_activity_toolBar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/genex"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:src="@drawable/logo2"
        app:layout_constraintBottom_toBottomOf="@+id/hesap_activity_toolBar"
        app:layout_constraintEnd_toEndOf="@+id/hesap_activity_toolBar"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/hesap_activity_toolBar"
        app:layout_constraintTop_toTopOf="@+id/hesap_activity_toolBar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/genex" />
</androidx.constraintlayout.widget.ConstraintLayout>