            android:layout_alignEnd="@+id/piyasabilgileri"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="-27dp"
            android:text="Piyasa Bilgileri"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="102dp"
            android:layout_height="42dp"
            android:layout_alignStart="@+id/pay"
            android:layout_alignEnd="@+id/pay"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="-11dp"
            android:text="Pay Alış/Satış"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="111dp"
            android:layout_height="24dp"
            android:layout_alignStart="@+id/viop"
            android:layout_alignEnd="@+id/viop"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="-16dp"
            android:text="VİOP Alış/Satış"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/eft"
            android:layout_alignEnd="@+id/eft"
            android:layout_marginStart="-6dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="-10dp"
            android:text="EFT/Havale Talebi"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rapor"
            android:layout_alignEnd="@+id/rapor"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="25dp"
            android:text="Raporlar"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/teminat"
            android:layout_alignEnd="@+id/teminat"
            android:layout_marginStart="-23dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="-37dp"
            android:text="VİOP Teminat İşlemleri"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="106dp"
            android:layout_height="21dp"
            android:layout_alignStart="@+id/döviz"
            android:layout_alignEnd="@+id/döviz"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="-8dp"
            android:text="Döviz Alış/Satış"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="75dp"
            android:layout_height="23dp"
            android:layout_alignStart="@+id/arz"
            android:layout_alignEnd="@+id/arz"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="5dp"
            android:text="Halka Arz"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sözlesme"
            android:layout_alignEnd="@+id/sözlesme"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="6dp"
            android:text="Sözleşmeler"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bülten"
            android:layout_alignEnd="@+id/bülten"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="660dp"
            android:layout_marginEnd="28dp"
            android:text="Bülten"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emir"
            android:layout_alignEnd="@+id/emir"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="143dp"
            android:layout_marginTop="660dp"
            android:layout_marginEnd="-6dp"
            android:text="Sentetik Emirler"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ayarlar"
            android:layout_alignEnd="@+id/ayarlar"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="660dp"
            android:layout_marginEnd="24dp"
            android:text="Ayarlar"
            android:textStyle="bold" />


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_activity_toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"/>


        <FrameLayout
            android:id="@+id/main_activity_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView

        android:layout_width="wrap_content"
        android:id="@+id/main_activity_navigationView"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        app:headerLayout="@layout/headerlayout"
        app:menu="@menu/nav_menu"/>


</androidx.drawerlayout.widget.DrawerLayout>
