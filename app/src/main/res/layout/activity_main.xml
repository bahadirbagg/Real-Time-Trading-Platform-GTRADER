<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_activity_drawerLayout"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/genex"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/logo2" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/genex"
            app:layout_constraintBottom_toBottomOf="@+id/genex" />


        <ImageView
            android:id="@+id/hesabim"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/account" />

        <ImageView
            android:id="@+id/emirlerim"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/orders" />

        <ImageView
            android:id="@+id/portföy"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/portfolio" />

        <ImageView
            android:id="@+id/piyasabilgileri"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:src="@drawable/marketnfo" />

        <ImageView
            android:id="@+id/pay"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="220dp"
            android:src="@drawable/stock" />

        <ImageView
            android:id="@+id/viop"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="220dp"
            android:src="@drawable/future" />

        <ImageView
            android:id="@+id/eft"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="330dp"
            android:src="@drawable/eft" />

        <ImageView
            android:id="@+id/rapor"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="330dp"
            android:src="@drawable/reports" />

        <ImageView
            android:id="@+id/teminat"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="330dp"
            android:src="@drawable/futurecollateral" />

        <ImageView
            android:id="@+id/döviz"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="450dp"
            android:src="@drawable/forex" />

        <ImageView
            android:id="@+id/arz"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="450dp"
            android:src="@drawable/ipo" />

        <ImageView
            android:id="@+id/sözlesme"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="450dp"
            android:src="@drawable/contracts" />

        <ImageView
            android:id="@+id/bülten"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="570dp"
            android:src="@drawable/forex" />

        <ImageView
            android:id="@+id/emir"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="570dp"
            android:src="@drawable/stock" />

        <ImageView
            android:id="@+id/ayarlar"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="570dp"
            android:src="@drawable/settings" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="57dp"
            android:layout_height="22dp"
            android:layout_alignStart="@+id/hesabim"
            android:layout_alignEnd="@+id/hesabim"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="19dp"
            android:text="Hesabım"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emirlerim"
            android:layout_alignEnd="@+id/emirlerim"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="18dp"
            android:text="Emirlerim"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/portföy"
            android:layout_alignEnd="@+id/portföy"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="17dp"
